// Top balance row template
// Root: Button - becomes #TopList[index]
Button {
  Anchor: (Height: 38, Bottom: 6);
  Padding: (Left: 10, Right: 10);
  Style: (
    Default: (Background: (Color: #0f1525)),
    Hovered: (Background: (Color: #1a2538)),
    Pressed: (Background: (Color: #0f1525))
  );
  LayoutMode: Left;

  Label #Rank {
    Text: "#1";
    Style: (FontSize: 12, TextColor: #FFD700, RenderBold: true, VerticalAlignment: Center);
    Anchor: (Width: 42, Vertical: 0);
  }

  Label #StatusText {
    Text: "Online";
    Style: (FontSize: 11, TextColor: #bbbbbb, VerticalAlignment: Center);
    Anchor: (Width: 70, Vertical: 0, Right: 6);
  }

  Label #PlayerName {
    Text: "PlayerName";
    Style: (FontSize: 13, TextColor: #ffffff, RenderBold: true, VerticalAlignment: Center);
    FlexWeight: 1;
    Anchor: (Vertical: 0);
  }

  Label #Balance {
    Text: "$0.00";
    Style: (FontSize: 13, TextColor: #E8D48B, RenderBold: true, VerticalAlignment: Center, HorizontalAlignment: End);
    Anchor: (Width: 120, Vertical: 0);
  }

  Label #Trend {
    Text: "-";
    Style: (FontSize: 12, TextColor: #BBBBBB, RenderBold: true, VerticalAlignment: Center, HorizontalAlignment: End);
    Anchor: (Width: 90, Vertical: 0);
  }
}
